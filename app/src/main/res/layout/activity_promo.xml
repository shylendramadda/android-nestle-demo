<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/promo_background"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvPromo"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iBCrossAdd"
                    android:layout_marginTop="20dp"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/coffeecross"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addSnack"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="40dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnIncrease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:drawableEnd="@android:drawable/ic_menu_share"
                android:text="@string/increase_rewards" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibDiscount"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gasstation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:src="@drawable/messi"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/messi"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold|italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnskip"
                    android:id="@+id/btnSkipPromo"
                    android:backgroundTint="@color/gray"
                    android:layout_marginHorizontal="80dp"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnadd"
                    android:backgroundTint="@color/teal_700"
                    android:id="@+id/btnAdd"
                    android:layout_marginTop="20dp"/>


            </LinearLayout>

        </LinearLayout>

</ScrollView>