<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupPage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-5dp"/>

    <TextView
        android:id="@+id/signup_titletext"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="508dp"
        android:text="Title" />

    <EditText
        android:id="@+id/signup_title"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="504dp"
        android:hint="Title" />

    <TextView
        android:id="@+id/signup_info"
        android:layout_width="233dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="564dp"
        android:text="Profile Info"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/signup_fnametext"
        android:layout_width="102dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="287dp"
        android:layout_marginBottom="462dp"
        android:text="First Name:"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="58dp" />

    <EditText
        android:id="@+id/signup_fname"
        android:layout_width="168dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="462dp"
        android:hint="First Name"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/signup_lnametext"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="394dp"
        android:text="Last Name:"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="111dp" />

    <EditText
        android:id="@+id/signup_lname"
        android:layout_width="166dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="397dp"
        android:hint="Last Name"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/signup_unametext"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="287dp"
        android:layout_marginBottom="338dp"
        android:text="User Name:" />

    <EditText
        android:id="@+id/signup_uname"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="334dp"
        android:hint="User Name" />

    <TextView
        android:id="@+id/signup_mobnumtext"
        android:layout_width="94dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="275dp"
        android:text="Mobile:" />

    <EditText
        android:id="@+id/signup_mobnum"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="272dp"
        android:hint="Mobile Number" />

    <TextView
        android:id="@+id/signup_passwordtext"
        android:layout_width="102dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="214dp"
        android:text="Password:" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="208dp"
        android:hint="Password" />

    <TextView
        android:id="@+id/signup_confirmtext"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="290dp"
        android:layout_marginBottom="158dp"
        android:text="Confirm:"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/signup_confirm"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="150dp"
        android:hint="Confirm"
        android:inputType="textPassword"/>

    <CheckBox
        android:id="@+id/signup_checkbox"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="84dp"
        android:text="@string/show_password"
        android:onClick="onCheckbocClicked"/>

    <Button
        android:id="@+id/signup_submit"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="25dp"
        android:text="Submit" />


</RelativeLayout>



